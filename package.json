{
  "name": "websites-monorepo",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@10.6.3",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:xfa": "pnpm --filter xfa-website dev",
    "dev:zhsjf": "pnpm --filter zhsjf-website dev",
    "dev:aihunt": "pnpm --filter aihunt-website dev",
    "dev:zsgate": "pnpm --filter zsgate-website dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "check": "pnpm lint && pnpm typecheck && pnpm test",
    "affected:apps": "bash scripts/affected-apps.sh",
    "check:docs-ai": "bash scripts/check-docs-ai.sh"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@playwright/test": "^1.53.2",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
